# Express Backend Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./osint_database.sqlite

# FastAPI AI Worker Configuration
FASTAPI_WORKER_URL=http://127.0.0.1:8001

# Security Configuration (Production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=1000

# Performance Configuration
REQUEST_TIMEOUT_MS=300000
STREAM_TIMEOUT_MS=600000

# Memory Configuration
APPROVED_MEMORY_LIMIT=10
SEARCH_RESULTS_LIMIT=50

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EXPORT=true
ENABLE_ADMIN_ENDPOINTS=true

# Request Size Limits
MAX_REQUEST_SIZE=10mb
